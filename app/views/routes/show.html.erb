<% if @route.buses.any? %>
  <h3>Total Buses in this Route (<%= @route.buses.count %>) 
  <% if current_user.try(:admin?) %>
<%=link_to "Add Bus", new_bus_path, class:"btn btn-primary"%>
<%end%>
  </h3>
  <table class="table table-bordered table-striped">
    <tr>
      <th>Name</th>
      <th>Bus Number</th>
      <th>Bus Company</th>
      <th>Bus Price</th>
      <th>Bus Seats</th>
      <th>Actions</th>
    </tr>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.name %></td>
        <td><%= bus.number %></td>
        <td><%= bus.company %></td>
        <td><%= bus.price %></td>
        <td><%= bus.seats %></td>
        <td>  <button type="button" class="btn btn-danger">Book Now</button></td>
      </tr>
    <% end %>
  <%end%>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <%= will_paginate @buses %>
  </ul>
</nav>