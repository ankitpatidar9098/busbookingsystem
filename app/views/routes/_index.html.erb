<div class="card container">
  <div class="card-body ">
    <table class="table table-bordered table-striped">
      <tr>
        <th>Route ID</th>
        <th>Starting From</th>
        <th>Destination</th>
        <th>first_bus</th>
        <th>last_bus</th>
        <th>Action</th>
      </tr>
      <% @routes.each do |route| %>
        <tr>
          <td><%= route.id %></td>
          <td><%= route.from %></td>
          <td><%= route.to %></td>
          <td><%= route.first_bus %></td>
          <td><%= route.last_bus %></td>
          <td> <% if current_user.try(:admin?) %>
              <%=link_to "Update Route", edit_route_path(route), class:"btn btn-primary"%>
              <%=link_to "Delete Route", route_path(route),data: { turbo_method: :delete } ,class:"btn btn-primary"%>
              <%= link_to "Show all Buses" , route_path(route), class:"btn btn-primary" %>
            <%else%>
              <%= link_to "View Buses" ,route_path(route) , class:"btn btn-primary" %></td>
          </tr>
        <%end%>
      <% end %>
    </table>
  </div>
  <ul class="pagination justify-content-center">
    <%= will_paginate @routes %>
  </ul>
</div>
</div>
</div>